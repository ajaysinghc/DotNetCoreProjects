@model GigFormViewModel;
@{
    ViewData["Title"] = "Create Gig";
}

<h1>Create Gig</h1>

<form method="post">
    <p class="alert alert-info">All Fields are required</p>
    <div class="form-group">
        @Html.LabelFor(m=>m.Venue)
        <input asp-for="@Model.Venue" class="form-control" autofocus="autofocus">
        <span asp-validation-for="Venue"  ></span>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m=>m.Date)
        <input asp-for="@Model.Date" class="form-control">
        <span asp-validation-for="Date" ></span>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m=>m.Time)
        <input asp-for="@Model.Time" class="form-control">
        <span asp-validation-for="Time"></span>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m=>m.Genre)
        @Html.DropDownListFor(m=>m.Genre, new SelectList(Model.Genres,"Id", "Name"),"", new {@class="form-control"})
        <span asp-validation-for="Genre"></span>
    </div>

    <input type="Submit" class="btn btn-primary" value="Save">
    
    
    
</form>